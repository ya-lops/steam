---
interface Props {
  title: string;
  href: string;
  bgImageSrc?: string;
  bgColor: string;
}

const { title, href, bgImageSrc, bgColor } = Astro.props;
---

<a
  {href}
  class="app-game-category"
  style={`--_bg-image: url(${bgImageSrc}); --_bg-color: ${bgColor};`}
>
  <span>{title}</span>
</a>

<style>
  @property --_l {
    syntax: "<percentage>";
    inherits: false;
    initial-value: 10%;
  }

  .app-game-category {
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1;
    border-radius: 5px;
    background-image:
      linear-gradient(transparent var(--_l), var(--_bg-color) 95%),
      var(--_bg-image);
    background-position: center;
    background-size: var(--_bgs: 100%);
    background-repeat: no-repeat;
    font-size: 24px;
    font-weight: 700;
    text-shadow: 1px 1px #444;
    overflow: clip;
    transition:
      background 0.25s,
      --_l 0.25s;

    span {
      transition: scale 0.25s;
      scale: var(--_s, 0.8);
      will-change: transform;
    }

    &:hover {
      --_l: 40%;
      --_bgs: 110%;
      --_s: 1;
    }
  }
</style>
